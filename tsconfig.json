{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es2021",
      "dom"
    ],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/js/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}